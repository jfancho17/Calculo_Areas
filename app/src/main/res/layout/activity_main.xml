<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    android:orientation="vertical"
    tools:context="incorporation.app.primera.mi.calculoareas.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circulo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/circulo" />

            <ImageView
                android:id="@+id/cuadrado"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/cuadrado" />

            <ImageView
                android:id="@+id/cubo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/cubo" />

            <ImageView
                android:id="@+id/triangulo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/triangulo" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/selfigura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radio_circulo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:onClick="limpiar"
                    android:text="circulo" />

                <RadioButton
                    android:id="@+id/radio_cuadrado"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="limpiar"
                    android:text="cuadro" />

                <RadioButton
                    android:id="@+id/radio_cubo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="limpiar"
                    android:text="cubo " />

                <RadioButton
                    android:id="@+id/radio_triangulo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="limpiar"
                    android:text="triangulo" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circulohint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/circulo" />

            <ImageView
                android:id="@+id/cuadradohint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cuadrado" />

            <ImageView
                android:id="@+id/cubohint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cubo" />

            <ImageView
                android:id="@+id/triangulohint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/triangulo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/calculoso"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botonredondo"
                android:text="Calcular"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/lado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Ingrese Lado"
                android:inputType="number"
                android:textColor="@color/crimson" />

            <EditText
                android:id="@+id/radioso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Radio"
                android:inputType="number"
                android:textColor="@color/crimson" />

            <EditText
                android:id="@+id/base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Base"
                android:inputType="number"
                android:textColor="@color/crimson" />

            <EditText
                android:id="@+id/altura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese altura"
                android:inputType="number"
                android:textColor="@color/crimson" />

            <EditText
                android:id="@+id/ladito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Lado"
                android:inputType="number"
                android:textColor="@color/crimson" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perimetro:"
                android:textAlignment="center"
                android:textColor="@color/crimson"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Area:"
                android:textAlignment="center"
                android:textColor="@color/crimson"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="volumen:"
                android:textAlignment="center"
                android:textColor="@color/crimson"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <TextView
                android:id="@+id/perimetroresp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/arearesp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/volumenresp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

